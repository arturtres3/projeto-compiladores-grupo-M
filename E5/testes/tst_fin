int a, b;

int increase(int x){
    x = x + 1;
    return x;
}

int factorialREC(int x){
    if(x <= 1){
        return 1;
    }else{
        return x * factorialREC(x - 1);
    };
}

int factorial(int x){
    int result;
    result = 1;
    while(x > 0) do {
        result = result * x;
        x = x - 1;
    };
    
    return result;
}

int main(){
    int x;
    x = 8;

    a = factorial(x);

    b = factorialREC(x);
    
}